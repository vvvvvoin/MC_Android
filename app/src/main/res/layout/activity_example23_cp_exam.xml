<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름을 입력하세요."
            android:id="@+id/_23_empNameEt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나이을 입력하세요."
            android:id="@+id/_23_empAgeEt"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="핸드폰번호을 입력하세요."
            android:id="@+id/_23_empMobileEt"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 입력"
            android:id="@+id/_23_empInsertBtn"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모든 사람 출력"
        android:id="@+id/_23_empSelectBtn"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/_23_resultTv"/>
    </ScrollView>

</LinearLayout>

























