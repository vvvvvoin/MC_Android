<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_One_image"
        android:layout_width="wrap_content"
        android:layout_height="110pt"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="제목 : "
            android:textSize="9pt" />

        <TextView
            android:id="@+id/detail_One_booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="저자 : "
            android:textSize="9pt" />

        <TextView
            android:id="@+id/detail_One_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="가격 : "
            android:textSize="9pt" />

        <TextView
            android:id="@+id/detail_One_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="고유번호 : "
            android:textSize="9pt" />

        <TextView
            android:id="@+id/detail_One_ISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt" />
    </LinearLayout>
</LinearLayout>